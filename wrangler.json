{
  "$schema": "./node_modules/wrangler/config-schema.json",
  "name": "spyfall",
  "main": "./src/server.ts",
  "compatibility_date": "2025-04-01",
  "compatibility_flags": ["nodejs_compat"],
  "assets": {
    "directory": "./public"
  },
  "durable_objects": {
    "bindings": [
      {
        "name": "SpyfallServer",
        "class_name": "SpyfallServer"
      }
    ]
  },
  "migrations": [
    {
      "tag": "v1",
      "new_sqlite_classes": ["SpyfallServer"]
    }
  ]
}
